    <title>Repairhint</title>
</head>

<body>
    <%- include('partials/case-navbar') %>
    <h3 class="email"><p><%- username %></p></h3>
    <div class="containerr">
        
        <div class="profile">
            <img class="user-img" src="images/profile.png " alt="">
            <h2><%- fullname %></h2>
            <p>Welcome to fixhint <%- first %>, get and monitor progress information about your account</p>
            <a class="btn" href="/account.ejs">Refresh</a>
            <a class="btn" href="/logout">Logout</a>
            <div>
                <p>Your referer link is</p>
                <p><%- userId %></p>
            </div>
            <div class="social-media">
                <div>
                    <img class="user-img" src="images/login.jpg " alt="">
                    <h3><%- login %></h3>
                    <p>Login</p>
                </div>
                <div>
                    <img class="user-img" src="images/refer.jpg " alt="">
                    <h3><%- refer%></h3>
                    <p>Referred</p>
                    
                </div>
                <div>
                    <img class="user-img" src="images/profile.png " alt="">
                    <h3><%- returns%></h3>
                    <p>Return</p>
                </div>
            </div>
            <% if (sub === 0){ %>
                <p style="color: red;">You have no active subscription</p>
                <details>
                    <p>You will only have access to case studies and about page.</p>
                </details>
            <% } else { %>
                <p style="color: rgb(7, 255, 7);">You are on active subscription</p>
                <details>
                    <p>You can cashout with minimum of 3months subscription</p>
                </details>
            <% } %>          
        </div>
    </div>
    <div class="container admin <%- boss%>">
        <h1 class="mb-4 text-white">New Random Secret</h1>

        <form action="/partials/random-secret.ejs" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title" class="text-white">Title</label>
                <input class="form-control" name="title" placeholder="Title" required></input>
            </div>
            <div class="form-group">
                <label for="description" class="text-white">Description</label>
                <textarea class="form-control" name="description" placeholder="Description"></textarea>
            </div>
            <div class="form-group">
                <label for="image" class="text-white">Upload image</label><br>
                <input type="file" name="image" id="image" class="form-control-file text-white">
            </div>
            <div class="form-group">
                <a class="btn btn-warning" href="/">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    <a href="/partials/no-picture-post.ejs">New No picture Quiz post</a><br>
    
    <a href="/partials/picture-post.ejs">picture Quiz post</a>
    </div>
    <%- include('partials/footer') %>   
</body>
</html>

