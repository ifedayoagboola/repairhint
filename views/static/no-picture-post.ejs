<body>
    <%- include('../partials/navbar') %>
    <div class="container">
        <h1 class="mb-4 text-black">Post new No Picture Quiz</h1>

        <form action="/partials/no-picture-quiz.ejs" method="POST">
            <div class="form-group">
                <!-- <label for="category" class="text-white">option1</label> -->
                <input class="form-control" name="category" placeholder="category" required></input>
            </div>
            <br>
            <div class="form-group">
                <!-- <label for="q" class="text-white"></label> -->
                <textarea class="form-control" name="q" placeholder="Question"></textarea>
            </div>
            <br>
            <div class="form-group">
                <!-- <label for="option1" class="text-white">option1</label> -->
                <input class="form-control" name="optionOne" placeholder="option1" required></input>
            </div>
            <br>
            <div class="form-group">
                <!-- <label for="option2" class="text-white">option1</label> -->
                <input class="form-control" name="optionTwo" placeholder="option2" required></input>
            </div>
            <br>
            <div class="form-group">
                <!-- <label for="option3" class="text-white">option1</label> -->
                <input class="form-control" name="optionThree" placeholder="option3" required></input>
            </div>
            <br>
            <br>
            <div class="form-group">
                <label for="option3" class="text-black">Answer position</label>
                <input class="form-control" name="answer" value="0" placeholder="answer" required></input>
            </div>
            <br>
            <div class="form-group">
                <a class="btn btn-warning" href="/">Cancel</a>
                <button type="submit" class="btn btn-success">Save</button>
            </div>
        </form>
    
    </div>
    
</body>
